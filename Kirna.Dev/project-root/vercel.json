 {
  "version": 2,
  "builds": [
    {
      "src": "src/pages/**/*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/src/pages/index.html"
    },
    {
      "src": "/about",
      "dest": "/src/pages/about.html"
    },
    {
      "src": "/contact",
      "dest": "/src/pages/contact.html"
    },
    {
      "src": "/projects",
      "dest": "/src/pages/projects.html"
    },
    {
      "src": "/services",
      "dest": "/src/pages/services.html"
    },
    {
      "src": "/(.*)",
      "dest": "/src/pages/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/src/styles/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/src/js/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
